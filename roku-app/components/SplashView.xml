<?xml version="1.0" encoding="utf-8"?>
<component name="SplashView" extends="Group">
  <interface>
    <field id="showLoadingText" type="boolean" value="false" />
  </interface>
  <children>
    <Rectangle width="1280" height="720" color="0x101418FF" />
    <Label id="appTitle" text="Futur" translation="[0,300]" width="1280" height="60" horizAlign="center" font="font:LargeBoldSystemFont" />
    <BusySpinner id="spinner" translation="[620,380]" />
    <Label id="loadingText" text="Checking accountâ€¦" translation="[0,460]" width="1280" height="40" horizAlign="center" visible="false" />
  </children>
  <script type="text/brightscript"><![CDATA[
    sub init()
      m.loadingText = m.top.findNode("loadingText")
      m.top.observeField("showLoadingText", "onShowLoadingText")
    end sub

    sub onShowLoadingText()
      m.loadingText.visible = m.top.showLoadingText
    end sub
  ]]></script>
</component>
